<fieldset>
  <legend>Log In</legend>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login, "E-Mail Address" %>
  <%= f.text_field :login %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :remember_me %><%= f.check_box :remember_me %><br />
  
  <%= f.submit "Login" %>
<% end %>
</fieldset>
